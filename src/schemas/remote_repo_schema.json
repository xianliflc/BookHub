{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "name" : {
            "type": "string"
        },
        "url" : {
            "type": "string"
        },
        "resource_vendor" : {
            "type": "string",
            "enum": [
                "Github",
                "Gitlab",
                "Bitbucket",
                "Amazon S3"
            ]
        },
        "vendor_setting" : {
            "type": "object",
            "properties": {
                "branch" : {
                    "type": "string"
                },
                "repo_name" : {
                    "type": "string"
                }
            }
        },
        "description": {
            "type": "string"
        },
        "version": {
            "type": "number",
            "minimum" : 1
        },
        "maintainer": {
            "type": "string"
        },
        "tags": {
            "type": "array",
            "uniqueItems": true,
            "items" : [
                {
                    "type": "string"
                }
            ]
        },
        "resource_items": {
            "type": "array",
            "items": [
                {
                    "type": "object",
                    "properties": {
                        "resource_item_name": {
                            "type": "string"
                        },
                        "author": {
                            "type": "string"
                        },
                        "resource_type": {
                            "type": "string",
                            "enum": [
                                "Book",
                                "Article",
                                "Note",
                                "Video",
                                "Other"
                            ]
                        },
                        "relative_url": {
                            "type": "string"
                        },
                        "absolute_url": {
                            "type": "string"
                        },
                        "description": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "resource_item_name"
                    ],
                    "oneOf": [
                        {
                            "required": ["relative_url"]
                        },
                        {
                            "required": ["absolute_url"]
                        }
                    ]
                }
            ]
        }
    },
    "required": [
        "name",
        "resource_vendor",
        "version",
        "resource_items",
        "url"
    ]

}